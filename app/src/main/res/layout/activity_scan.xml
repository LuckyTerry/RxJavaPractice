<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical">

    <Button
        android:id="@+id/btn_start_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_start_sum"/>

    <TextView
        android:id="@+id/tv_item_dig"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="TextView"/>

    <TextView
        android:id="@+id/tv_sum_dig"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="TextView"/>


    <Button
        android:id="@+id/btn_start_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btn_start_sort"/>

    <TextView
        android:id="@+id/tv_item_str"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="TextView"/>

    <TextView
        android:id="@+id/tv_sorted_str"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="TextView"/>
</LinearLayout>